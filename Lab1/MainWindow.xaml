        <TextBox x:Name="r" HorizontalAlignment="Left" Margin="76,60,0,0" TextWrapping="Wrap" Text="6" VerticalAlignment="Top" Width="66" FontSize="14"/>
        <Menu Margin="-149,0,426,6">
            <MenuItem x:Name="Inheritance" Header="Спадкування" Height="25" Width="128" FontSize="14" Click="Inheritance_Click"/>
            <MenuItem x:Name="Abstract" Header="Абстракція" FontSize="14" Height="23" Width="129" Click="Abstract_Click"/>
